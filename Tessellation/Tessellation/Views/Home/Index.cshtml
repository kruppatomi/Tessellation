@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Home Page";
    var guest = "Guest";
}
@model Tessellation.Models.User


@if (Context.Session.GetString("sessionUser") == null)
{
    <h1 id="loggedOuth1">Logged out</h1>
}
<div id="wrapper">
    <div class="loginDiv">
        <h3>Login</h3>
        <form asp-action="Login" method="post">
            <label>Name</label><br />
            <input asp-for="Name" required /><br />
            <label>Password</label><br />
            <input type="password" asp-for="Password" required /><br />
            <button type="submit">Login</button>
        </form>
    </div>

    <div class="registerDiv">
        <h3>Register</h3>
        <form asp-action="Register" method="post">
            <label>Name</label><br />
            <input asp-for="Name" required /><br />
            <label>Password</label><br />
            <input type="password" asp-for="Password" required /><br />
            <label>Confirm password</label><br />
            <input type="password" asp-for="ConfirmPassword" required /><br />
            <button type="submit">Register</button>
        </form>
    </div>
</div>
<div id="guestDiv">
    <input id="LoginAsGuest" type="button" onclick="location.href='@Url.Action("LoginAsGuest", "Home", new { guest=@guest})'" value="Continue as Guest" class="btn btn-primary" />
</div>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message")
        }
    </script>
}